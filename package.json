{
  "name": "bonsai",
  "version": "0.1.10",
  "description": "Git worktree workflow CLI - carefully cultivate your branches",
  "type": "module",
  "bin": {
    "bonsai": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run scripts/build-binary.ts --compile --outfile ./dist/bonsai",
    "build:darwin-x64": "bun run scripts/build-binary.ts --compile --target=bun-darwin-x64 --outfile ./dist/bonsai-darwin-x86_64",
    "build:darwin-arm64": "bun run scripts/build-binary.ts --compile --target=bun-darwin-arm64 --outfile ./dist/bonsai-darwin-arm64",
    "build:linux-x64": "bun run scripts/build-binary.ts --compile --target=bun-linux-x64 --outfile ./dist/bonsai-linux-x86_64",
    "build:linux-arm64": "bun run scripts/build-binary.ts --compile --target=bun-linux-arm64 --outfile ./dist/bonsai-linux-arm64",
    "build:all": "bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "hooks:install": "./scripts/install-hooks.sh",
    "link": "sudo ln -sf $(pwd)/dist/bonsai /usr/local/bin/bonsai && echo '✓ Linked to /usr/local/bin/bonsai'",
    "unlink": "rm -f /usr/local/bin/bonsai && echo '✓ Removed /usr/local/bin/bonsai'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.8.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1",
    "smol-toml": "^1.6.0"
  }
}
